<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_Traffic"
        android:layout_width="174dp"
        android:layout_height="76dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="64dp"
        android:background="@color/red"
        android:onClick="onClick"
        android:text="@string/traffic_command"
        android:textColor="#000000"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_Green"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="92dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/greenlight" />

    <ImageView
        android:id="@+id/img_Yellow"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="132dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yellowlight" />

    <ImageView
        android:id="@+id/img_Red"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="132dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redlight" />

</androidx.constraintlayout.widget.ConstraintLayout>